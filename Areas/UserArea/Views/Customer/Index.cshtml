@model IEnumerable<MVC_Inventory_System_Project.Models.tblcustomer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/UserArea/Views/Shared/userlayout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <style>
        .card {
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007BFF;
            color: #fff;
        }

        .card-body {
            padding: 20px;
        }

        .btn-primary {
            background-color: #007BFF;
            border: none;
        }

        .btn-update {
            background-color: #ffc107;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        thead {
            background-color: #007BFF;
            color: #fff;
        }

        tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }
    </style>
    <script>
        var customerdetails = [];

        $(document).ready(function () {
            $("#btnupdate").click(function () {
                var id = $("#txtid").val(); 
                UpdateCustomer(id);
            });

            $("#btnsubmit").click(function () {
                AddCustomerData();
            });
        });

        function AddCustomerData() {
            var n = $("#txtname").val();
            var e = $("#txtemail").val();
            var m = $("#txtmob").val();
            var c = $("#txtcity").val();

            var st = { "Customet_name": n, "email_address": e, "mobile_number": m, "city": c };
            customerdetails.push(st);

            $.ajax({
                url: '/Customer/AddCustomerData',
                method: 'post',
                data: JSON.stringify(st),
                contentType: 'application/json',
                success: function (resp) {
                    alert(resp);
                    window.location.href = "/UserArea/Customer";
                }
            });
            clearData();
        }

        function ViewCustomer(id) {
            $.ajax({
                url: '/Customer/GetCustomer/' + id,
                method: 'get',
                success: function (resp) {
                    if (resp) {
                        $("#txtid").val(resp.Customer_id);
                        $("#txtname").val(resp.Customet_name);
                        $("#txtemail").val(resp.Email_address);
                        $("#txtmob").val(resp.mobile_number);
                        $("#txtcity").val(resp.City);
                    }
                }
            });
        }

        function DeleteCustomer(id) {
            if (confirm("Are you sure you want to delete this customer?")) {
                $.ajax({
                    url: '/Customer/DeleteCustomerData/' + id,
                    method: 'post',
                    success: function (resp) {
                        alert(resp);
                        window.location.href = "/UserArea/Customer";
                    }
                });
            }
        }

        function UpdateCustomer(id) {
            var n = $("#txtname").val();
            var e = $("#txtemail").val();
            var m = $("#txtmob").val();
            var c = $("#txtcity").val();
            var st = {
                "Customer_id": id,
                "Customet_name": n,
                "Email_address": e,
                "mobile_number": m,
                "City": c
            };
            $.ajax({
                url: '/Customer/UpdateCustomerData',
                method: 'post',
                data: JSON.stringify(st),
                contentType: 'application/json',
                success: function (resp) {
                    alert(resp);
                    window.location.href = "/UserArea/Customer";
                    clearData();
                }
            });
        }

        function clearData() {
            $("#txtid").val("");
            $("#txtname").val("");
            $("#txtemail").val("");
            $("#txtmob").val("");
            $("#txtcity").val("");
        }
    </script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Customer Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="txtid">Customer ID</label>
                            <input type="text" id="txtid" class="form-control" disabled />
                        </div>
                        <div class="mb-3">
                            <label for="txtname">Customer Name</label>
                            <input type="text" id="txtname" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="txtemail">Email Address</label>
                            <input type="text" id="txtemail" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="txtmob">Mobile No</label>
                            <input type="text" id="txtmob" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="txtcity">City</label>
                            <input type="text" id="txtcity" class="form-control" />
                        </div>
                        <div class="card-footer">
                            <button type="button" class="btn btn-primary" id="btnsubmit">Submit</button>
                            <button type="button" class="btn btn-warning btn-update" id="btnupdate">Update</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Email Address</th>
                            <th>Mobile No</th>
                            <th>City</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Customet_name</td>
                                <td>@item.Email_address</td>
                                <td>@item.mobile_number</td>
                                <td>@item.City</td>
                                <td>
                                   
                                    <button type="button" class="btn btn-primary btn-view" onclick="ViewCustomer(@item.Customer_id)">
                                        <i class="fa fa-eye"></i> 
                                    </button>

                                   
                                    <button type="button" class="btn btn-danger btn-delete" onclick="DeleteCustomer(@item.Customer_id)">
                                        <i class="fa fa-trash"></i> 
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </table>
            </div>
        </div>
    </div>
</body>
</html>